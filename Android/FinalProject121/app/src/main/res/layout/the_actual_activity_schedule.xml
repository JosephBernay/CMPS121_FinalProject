<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#000000"
        android:text="Computer Name"
        android:id="@+id/compName">
    </TextView>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/compName"
        style="?android:attr/buttonBarStyle"
        android:weightSum="7"
        android:id="@+id/dayList">

        <Button
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:textAllCaps="false"
            android:background="@drawable/day_button_1"
            android:text="Wed"
            android:onClick="changeDay"
            android:id="@+id/day1" />
        <Button
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:textAllCaps="false"
            android:background="@drawable/day_button_2"
            android:text="Thu"
            android:onClick="changeDay"
            android:id="@+id/day2" />
        <Button
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:textAllCaps="false"
            android:background="@drawable/day_button_1"
            android:text="Fri"
            android:onClick="changeDay"
            android:id="@+id/day3" />
        <Button
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:textAllCaps="false"
            android:background="@drawable/day_button_2"
            android:text="Sat"
            android:onClick="changeDay"
            android:id="@+id/day4" />
        <Button
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:textAllCaps="false"
            android:background="@drawable/day_button_1"
            android:text="Sun"
            android:onClick="changeDay"
            android:id="@+id/day5" />
        <Button
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:textAllCaps="false"
            android:background="@drawable/day_button_2"
            android:text="Mon"
            android:onClick="changeDay"
            android:id="@+id/day6" />
        <Button
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:textAllCaps="false"
            android:background="@drawable/day_button_1"
            android:text="Tue"
            android:onClick="changeDay"
            android:id="@+id/day7" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeList"
        android:layout_below="@+id/dayList"
        android:layout_above="@+id/scheduleBack"
        android:stackFromBottom="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/scrollLayout">

            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot0"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot1"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot2"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot3"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot4"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot5"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot6"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot7"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot8"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot9"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot10"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot11"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot12"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot13"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot14"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot15"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot16"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot17"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot18"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot19"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot20"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot21"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot22"
                />
            <include
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout="@layout/time_slot"
                android:id="@+id/timeSlot23"
                />
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Back"
        android:id="@+id/scheduleBack"/>
</RelativeLayout>